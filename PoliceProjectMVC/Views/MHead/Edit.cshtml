@using PoliceProjectMVC.Custome_Helpers
@model PoliceProjectMVC.Models.MHead
@{
    ViewBag.PageTitle = "Edit Major Head";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
    <div class="col-md-12">
        <div class="card card-outline card-primary">
            <div class="card-header d-flex align-items-center">
                <h3 class="card-title mb-0">Edit Major Head</h3>
                <div class="card-tools ml-auto">
                    <a href="/MHead" class="btn btn-primary"><span class="fas fa-backward"></span>&nbsp;&nbsp;Back To List</a>
                </div>
            </div>
            <div class="card-body">
                <form action="/MHead/Edit" method="post">
                    <div class="row">
                        @Html.HiddenFor(m => m.Id)
                        @Html.HiddenFor(m => m.IsActive)
                        @Html.HiddenFor(m => m.CreatedBy)
                        @Html.HiddenFor(m => m.CreatedDate)

                        <div class="col-sm-6 col-md-4">@Html.GenerateField(m => m.Name_EN, "Major Head (En)", "text")</div>
                        <div class="col-sm-6 col-md-4">@Html.GenerateField(m => m.Name_Hi, "Major Head (Hi)", "text")</div>
                        <div class="col-sm-6 col-md-4">@Html.GenerateField(m => m.CSM_Days, "Chargesheet Monitoring Days", "number")</div>
                    </div>
                    <hr />
                    <div class="row justify-content-center align-content-center mt-3">
                        <div class="col-auto">
                            <button type="submit" class="btn btn-outline-success float-right">Submit</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>