@model IEnumerable<PoliceProjectMVC.Models.RTI>
@{
    ViewBag.PageTitle = "RTI";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int b = 1;
}

<div class="card card-outline card-primary">
    <div class="card-header d-flex align-items-center">
        <h3 class="card-title mb-0">RTI</h3>
        <div class="card-tools ml-auto">
            <a href="/RTI/Create" class="btn btn-primary"><span class="fas fa-plus"></span>&nbsp;&nbsp;Add New Missing Person</a>
        </div>
    </div>
    <div class="card-body">
        <div class="container-fluid table-responsive">
            <table class="table dtable table-bordered table-striped table-sm text-nowrap" style="width:100%;">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Applicant Name</th>
                        <th>Got it From</th>
                        <th>Request Subject</th>
                        <th>Execution Date and Knowledge</th>
                        <th>Serial/Reciept No.</th>
                        <th>Conviction</th>
                        <th>Document</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@(b++)</td>
                            <td>@item.ApplicantName</td>
                            <td>@item.GotItFrom</td>
                            <td>@item.RequestSubject</td>
                            <td>@item.ExecutionDateAndKnowledgeBook</td>
                            <td>@item.SerialNumber</td>
                            <td>@item.Conviction</td>
                            <td>
                                @if (!string.IsNullOrEmpty(item.ImageUrl))
                                {
                                    <img src="@item.ImageUrl" width="50" height="50" class="rounded-circle" />
                                }
                                else
                                {
                                    <img src="/Images/noimage.png" width="50" height="50" class="rounded-circle" />
                                }
                            </td>
                            <td>
                                <a href="/RTI/Edit/@item.Id" class="btn btn-sm mr-2 btn-warning"><i class="fa fa-edit"></i></a>
                                <a href="/RTI/Delete/@item.Id" onclick="return confirm('Are you sure you want to delete this ?')" class="btn btn-sm btn-danger"><i class="fa fa-trash"></i></a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
