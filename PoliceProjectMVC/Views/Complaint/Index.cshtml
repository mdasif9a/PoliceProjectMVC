@model IEnumerable<PoliceProjectMVC.Models.Complaint>
@{
    ViewBag.PageTitle = "Complaint List";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int b = 1;
}

<div class="card card-outline card-primary">
    <div class="card-header d-flex align-items-center">
        <h3 class="card-title mb-0">Complaint List</h3>

    </div>
    <div class="card-body">
        <div class="container-fluid table-responsive">
            <table class="table dtable table-bordered table-striped table-sm text-nowrap" style="width:100%;">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Name</th>
                        <th>Mobile</th>
                        <th>Email</th>
                        <th>Complian Subject</th>
                        <th>Complian Type</th>
                        <th>Complian Details</th>
                        <th>Police Station</th>
                        <th>Incident Date</th>
                        <th>Complain Date</th>
                        <th>Action</th>

                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@(b++)</td>
                            <td>@item.Name</td>
                            <td>@item.MobileNo</td>
                            <td>@item.Email</td>
                            <td>@item.ComplainSubject</td>
                            <td>@item.ComplainType</td>
                            <td>@item.ComplainDetails</td>
                            <td>@item.PoliceStation.Name_En</td>
                            <td>@item.IncidentDate.ToShortDateString()</td>
                            <td>@item.CreatedDate.ToShortDateString()</td>
                            <td>
                                <a href="/Complaint/Delete/@item.Id" onclick="return confirm('Are you sure you want to delete this Complaint?')" class="btn btn-sm btn-danger"><i class="fa fa-trash"></i></a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>