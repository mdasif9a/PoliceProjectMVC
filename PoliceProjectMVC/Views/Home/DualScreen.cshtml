@model IEnumerable<PoliceProjectMVC.Models.Banner>
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Full Page Slider with Thumbnails</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <style>
        .swiper-slide-thumb-active {
            opacity: 0.5;
        }

        .myborder {
            border: 2px solid #000;
        }
    </style>
</head>
<body class="bg-light">

    <!-- Full Width Slider -->
    <div class="swiper mySwiper container-fluid p-0 myborder">
        <div class="swiper-wrapper">
            @foreach (var item in Model)
            {
                <div class="swiper-slide position-relative">
                    <img src="@item.ImageUrl" class="w-100 object-fit-fill" style="height:80vh;">
                    <div style="bottom:0px;min-height:100px;font-size:40px;" class="position-absolute w-100 bg-white bg-opacity-50 text-danger text-center p-2">
                        @item.Name
                    </div>
                </div>
            }
        </div>
    </div>

    <!-- Thumbnail Slider -->
    <div class="swiper mySwiperThumbs container-fluid p-0 mt-1">
        <div class="swiper-wrapper">
            @foreach (var item in Model)
            {
                <div class="swiper-slide myborder">
                    <img src="@item.ImageUrl" class="w-100 object-fit-cover" style="height:18vh;">
                </div>
            }
        </div>
    </div>
    <pre id="json-result">Waiting for data...</pre>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.js"></script>
    <script>
        var thumbnailSwiper = new Swiper(".mySwiperThumbs", {
            loop: true,
            spaceBetween: 10,
            slidesPerView: 6,
            freeMode: true,
            watchSlidesProgress: true,
        });

        var mainSwiper = new Swiper(".mySwiper", {
            loop: true,
            autoplay: { delay: 3000 },
            thumbs: {
                swiper: thumbnailSwiper,
            },
        });
    </script>

    <script>
        let currentCount = @Model.Count();
        // Function to fetch JSON data
        async function fetchJsonData() {
            try {
                // Replace this URL with your actual API endpoint
                const response = await fetch('/Home/MWCount');
                if (!response.ok) {
                    throw new Error(`HTTP error! Status: ${response.status}`);
                }
                const data = await response.json();

                const fetchedCount = data;

                if (fetchedCount !== currentCount) {
                    location.reload();
                }

            } catch (error) {
                console.error('Error fetching JSON:', error);
                document.getElementById('json-result').textContent = 'Failed to fetch data.';
            }
        }

        // Fetch JSON data every second
        //setInterval(fetchJsonData, 5000);

        // Initial fetch
        fetchJsonData();
    </script>
</body>
</html>