@model  IEnumerable<PoliceProjectMVC.Models.ViewLogin>

@{
    ViewBag.PageTitle = "All Users";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int b = 1;
}

<div class="card card-outline card-primary">
    <div class="card-header d-flex align-items-center">
        <h3 class="card-title mb-0">All Users Details</h3>
        <div class="card-tools ml-auto">
            <a href="/MyUser/Create" class="btn btn-primary"><span class="fas fa-plus"></span>&nbsp;&nbsp;Add New User</a>
        </div>
    </div>
    <div class="card-body">
        <div class="container-fluid table-responsive">
            <table class="table dtable table-bordered table-striped table-sm text-nowrap" style="width:100%;">
                <thead>
                    <tr>
                        <td>#</td>
                        <td>Name</td>
                        <td>Surname</td>
                        <td>Mobile</td>
                        <td>EmailId</td>
                        <td>Image</td>
                        <td>Role</td>
                        <td>Action</td>
                    </tr>
                </thead>
                <tbody>
                    @foreach (PoliceProjectMVC.Models.ViewLogin item in Model)
                    {
                        <tr>
                            <td>@(b++)</td>
                            <td>@item.FirstName</td>
                            <td>@item.LastName</td>
                            <td>@item.Number</td>
                            <td>@item.Email</td>
                            <td>
                                <img src="@item.ImageUrl" width="50" height="50" />
                            </td>
                            <td>@item.Role</td>
                            <td>
                                <a href="/MyUser/Edit/@item.Id" class="btn btn-sm mr-2 btn-warning"><i class="fa fa-edit"></i></a>
                                <a href="/MyUser/Delete/@item.Id" onclick="return confirm('Are You Sure To Delete ?')" class="btn btn-sm btn-danger"><i class="fa fa-trash"></i></a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>