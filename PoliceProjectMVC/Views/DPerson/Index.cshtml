@model IEnumerable<PoliceProjectMVC.Models.DPerson>
@{
    ViewBag.PageTitle = "Death Persons";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int b = 1;
}

<div class="card card-outline card-primary">
    <div class="card-header d-flex align-items-center">
        <h3 class="card-title mb-0">Death Persons</h3>
        <div class="card-tools ml-auto">
            <a href="/DPerson/Create" class="btn btn-primary"><span class="fas fa-plus"></span>&nbsp;&nbsp;Add New Death Person</a>
        </div>
    </div>
    <div class="card-body">
        <div class="container-fluid table-responsive">
            <table class="table dtable table-bordered table-striped table-sm text-nowrap" style="width:100%;">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Person Name</th>
                        <th>Person Age</th>
                        <th>Person Gender</th>
                        <th>Person Image</th>
                        <th>Death Date</th>
                        <th>Death Place</th>
                        <th>Status</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@(b++)</td>
                            <td>@item.PersonName</td>
                            <td>@item.PersonAge</td>
                            <td>@item.PersonGender</td>
                            <td>
                                @if (!string.IsNullOrEmpty(item.ImageUrl))
                                {
                                    <img src="@item.ImageUrl" width="50" height="50" class="rounded-circle" />
                                }
                                else
                                {
                                    <img src="/Images/noimage.png" width="50" height="50" class="rounded-circle" />
                                }
                            </td>
                            <td>@item.DeadDate.ToString("dd-MM-yyyy")</td>
                            <td>@item.DeathPlace</td>
                            <td></td>
                            <td>
                                <a href="/DPerson/Edit/@item.Id" class="btn btn-sm mr-2 btn-warning"><i class="fa fa-edit"></i></a>
                                <a href="/DPerson/Delete/@item.Id" onclick="return confirm('Are you sure you want to delete this ?')" class="btn btn-sm btn-danger"><i class="fa fa-trash"></i></a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
