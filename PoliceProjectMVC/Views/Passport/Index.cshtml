@model  IEnumerable<PoliceProjectMVC.Models.Passport>

@{
    ViewBag.PageTitle = "All Passport";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int b = 1;
}

<div class="card card-outline card-primary">
    <div class="card-header d-flex align-items-center">
        <h3 class="card-title mb-0">All Passport</h3>
        @*<div class="card-tools ml-auto">
                <a href="/Passport/Create" class="btn btn-primary"><span class="fas fa-plus"></span>&nbsp;&nbsp;Add New</a>
            </div>*@
    </div>
    <div class="card-body">
        <div class="container-fluid table-responsive">
            <table class="table dtable table-bordered table-striped table-sm text-nowrap" style="width:100%;">
                <thead>
                    <tr>
                        <td>#</td>
                        <td>Police Station</td>
                        <td>Passport Type</td>
                        <td>File Number</td>
                        <td>Application Name</td>
                        <td>Mobile No.</td>
                        <td>Date Of Birth</td>
                        <td>Email</td>
                        <td>Comments</td>
                        <td>Appplied Date</td>
                        <td>Action</td>
                    </tr>
                </thead>
                <tbody>
                    @foreach (PoliceProjectMVC.Models.Passport item in Model)
                    {
                        <tr>
                            <td>@(b++)</td>
                            <td>@item.PoliceStation.Name_En</td>
                            <td>@item.PassportType</td>
                            <td>@item.FileNumber</td>
                            <td>@item.ApplicantName</td>
                            <td>@item.MobileNo</td>
                            <td>@item.DateOfBirth.ToShortDateString()</td>
                            <td>@item.Email</td>
                            <td class="text-wrap">@item.Comments</td>
                            <td>@item.CreatedDate.ToShortDateString()</td>
                            <td>
                                <a href="/Passport/Delete/@item.Id" onclick="return confirm('Are You Sure To Delete ?')" class="btn btn-sm btn-danger"><i class="fa fa-trash"></i></a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>