@model  IEnumerable<PoliceProjectMVC.Models.TblRole>

@{
    ViewBag.PageTitle = "All Roles";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int b = 1;
}

<div class="card card-outline card-primary">
    <div class="card-header d-flex align-items-center">
        <h3 class="card-title mb-0">All Roles Details</h3>
        <div class="card-tools ml-auto">
            <a href="/MyUser/RoleCreate" class="btn btn-primary"><span class="fas fa-plus"></span>&nbsp;&nbsp;Add New Role</a>
        </div>
    </div>
    <div class="card-body">
        <div class="container-fluid table-responsive">
            <table class="table dtable table-bordered table-striped table-sm text-nowrap">
                <thead>
                    <tr>
                        <td>#</td>
                        <td>RoleName</td>
                        <td>Action</td>
                    </tr>
                </thead>
                <tbody>
                    @foreach (PoliceProjectMVC.Models.TblRole item in Model)
                    {
                        <tr>
                            <td>@(b++)</td>
                            <td>@item.RoleName</td>
                            <td>
                                <a href="/MyUser/RoleEdit/@item.Id" class="btn btn-sm mr-2 btn-warning">Edit</a>
                                <a href="/MyUser/RoleDelete/@item.Id" onclick="return confirm('Are You Sure To Delete ?')" class="btn btn-sm btn-danger">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>