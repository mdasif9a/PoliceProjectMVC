@using PoliceProjectMVC.Custome_Helpers
@model PoliceProjectMVC.Models.DistrictDetail
@{
    ViewBag.PageTitle = "Add DistrictDetail";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
    <div class="col-md-12">
        <div class="card card-outline card-primary">
            <div class="card-header d-flex align-items-center">
                <h3 class="card-title mb-0">Add DistrictDetail</h3>
                <div class="card-tools ml-auto">
                    <a href="/DistrictDetail" class="btn btn-primary"><span class="fas fa-backward"></span>&nbsp;&nbsp;Back To List</a>
                </div>
            </div>
            <div class="card-body">
                <form action="/DistrictDetail/Create" method="post" enctype="multipart/form-data">
                    <div class="row">
                        <div class="col-sm-6 col-md-4">@Html.GenerateField(m => m.Name, "Enter Name", "text")</div>
<div class="col-sm-6 col-md-4">@Html.GenerateField(m => m.Address, "Enter Address", "text")</div>
<div class="col-sm-6 col-md-4">@Html.GenerateField(m => m.VisitorNo, "Enter VisitorNo", "text")</div>
<div class="col-sm-6 col-md-4">@Html.GenerateField(m => m.Email, "Enter Email", "text")</div>
<div class="col-sm-6 col-md-4">@Html.GenerateField(m => m.MapUrl, "Enter MapUrl", "text")</div>
<div class="col-sm-6 col-md-4">@Html.GenerateField(m => m.ContactNo, "Enter ContactNo", "text")</div>
<div class="col-sm-6 col-md-4">@Html.GenerateField(m => m.MobileNo, "Enter MobileNo", "text")</div>
<div class="col-sm-6 col-md-4">@Html.GenerateField(m => m.FacebookLink, "Enter FacebookLink", "text")</div>
<div class="col-sm-6 col-md-4">@Html.GenerateField(m => m.TwitterLink, "Enter TwitterLink", "text")</div>
<div class="col-sm-6 col-md-4">@Html.GenerateField(m => m.YoutubeLink, "Enter YoutubeLink", "text")</div>
<div class="col-sm-6 col-md-4">@Html.GenerateField(m => m.DownloadLink, "Enter DownloadLink", "text")</div>
<div class="col-sm-6 col-md-4">@Html.GenerateField(m => m.Priority, "Enter Priority", "text")</div>
<div class="col-sm-6 col-md-4">@Html.GenerateFileField(m => m.MyImage, "Upload Images", "file", "image/*", "#profileImage")</div>
<div class="col-sm-6 col-md-4">
    <img src="/Images/noimage.png" id="profileImage" style="min-height:156px" alt="Upload Photo" class="border border-dark mb-3" width="130" height="156">
</div>
                    </div>
                    <hr />
                    <div class="row justify-content-center align-content-center mt-3">
                        <div class="col-auto">
                            <button type="submit" class="btn btn-outline-success float-right">Submit</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>