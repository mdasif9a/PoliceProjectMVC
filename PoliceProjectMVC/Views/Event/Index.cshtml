@model IEnumerable<PoliceProjectMVC.Models.Event>
@{
    ViewBag.PageTitle = "Event List";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int b = 1;
}

<div class="card card-outline card-primary">
    <div class="card-header d-flex align-items-center">
        <h3 class="card-title mb-0">Event List</h3>
        <div class="card-tools ml-auto">
            <a href="/Event/Create" class="btn btn-primary"><span class="fas fa-plus"></span>&nbsp;&nbsp;Add New Event</a>
        </div>
    </div>
    <div class="card-body">
        <div class="container-fluid table-responsive">
            <table class="table dtable table-bordered table-striped table-sm text-nowrap" style="width:100%;">
                <thead>
                    <tr>
                        <th>#</th>
<th>Title</th>
<th>Priority</th>
<th>Action</th>

                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@(b++)</td>
<td>@item.Title</td>
<td>@item.Priority</td>
<td>
    <a href="/Event/Edit/@item.Id" class="btn btn-sm mr-2 btn-warning"><i class="fa fa-edit"></i></a>
    <a href="/Event/Delete/@item.Id" onclick="return confirm('Are you sure you want to delete this Event?')" class="btn btn-sm btn-danger"><i class="fa fa-trash"></i></a>
</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>