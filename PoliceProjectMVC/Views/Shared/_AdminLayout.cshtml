<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Bettiah Police Admin Panel</title>
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700&display=fallback">
    <link rel="stylesheet" href="/AdminLayout/fontawesome-free/css/all.min.css">
    <link rel="stylesheet" href="/AdminLayout/css/adminlte.css">
    <link rel="stylesheet" href="/AdminLayout/owlcarousel/assets/owl.carousel.min.css">
    <link rel="stylesheet" href="/AdminLayout/owlcarousel/assets/owl.theme.green.min.css">
    <link href="/favicon.png" rel="icon" type="image/x-icon" />
    <link rel="stylesheet" href="/AdminLayout/datatables-bs4/css/dataTables.bootstrap4.min.css">
    <link rel="stylesheet" href="/AdminLayout/datatables-responsive/css/responsive.bootstrap4.min.css">
    <link rel="stylesheet" href="/AdminLayout/css/buttons.dataTables.min.css">
    <link rel="stylesheet" href="/AdminLayout/css/select2.min.css" />
    <link href="/Content/Site.css" rel="stylesheet" />
    <link href="/Content/toastr.min.css" rel="stylesheet" />
</head>

<body class="sidebar-mini layout-navbar-fixed layout-fixed">
    <div class="wrapper">

        <nav class="main-header navbar navbar-expand navbar-dark navbar-cyan">
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" data-widget="pushmenu" href="javascript:void(0)" role="button">
                        <i class="fas fa-bars"></i>
                    </a>
                </li>
                <li class="nav-item d-none d-sm-inline-block">
                    <a href="/" class="nav-link">Home</a>
                </li>
            </ul>

            <ul class="navbar-nav ml-auto">
                <li class="nav-item">
                    <form action="@Url.Action("SetLanguage", "Home")" method="post" style="display:inline;">
                        <button type="submit" name="culture" value="hi" class="btn btn-link text-white"><i class="fas fa-globe"></i> Hindi</button>
                        <button type="submit" name="culture" value="en" class="btn btn-link text-white">English</button>
                    </form>
                </li>
                @*<li class="nav-item">
                        <div class="user-panel d-flex">
                            <div class="info">
                                <span class="d-block text-white">Admin Panel</span>
                            </div>
                        </div>
                    </li>*@
            </ul>
        </nav>

        <aside class="main-sidebar sidebar-light-cyan elevation-4">
            <a href="/" class="brand-link bg-cyan">
                <span class="text-white ml-3 font-weight-bold">Admin Panel</span>
            </a>
            <div class="sidebar text-sm">
                <nav class="mt-2">
                    <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">
                        <li class="nav-item">
                            <a href="/Home/Dashboard" class="nav-link">
                                <i class="fas fa-tachometer-alt"></i>
                                <p class="ml-3">
                                    Dashboard
                                </p>
                            </a>
                        </li>

                        <li class="nav-item">
                            <a href="javascript:void(0);" class="nav-link">
                                <i class="fas fa-cog"></i>
                                <p class="ml-3">
                                    User Set Up
                                    <i class="right fas fa-angle-left"></i>
                                </p>
                            </a>
                            <ul class="nav nav-treeview">
                                <li class="nav-item">
                                    <a href="/MyUser" class="nav-link">
                                        <i class="far fa-circle"></i>
                                        <p class="ml-2">All Users</p>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a href="/MyUser/RoleIndex" class="nav-link">
                                        <i class="far fa-circle"></i>
                                        <p class="ml-2">All Roles</p>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a href="/MyUser/Create" class="nav-link">
                                        <i class="far fa-circle"></i>
                                        <p class="ml-2">Add New User</p>
                                    </a>
                                </li>
                            </ul>
                        </li>

                        <li class="nav-item">
                            <a href="/Home/LogOut" class="nav-link">
                                <i class="fas fa-sign-out-alt"></i>
                                <p class="ml-3">
                                    Logout
                                </p>
                            </a>
                        </li>
                    </ul>
                </nav>
            </div>
        </aside>

        <div class="content-wrapper">

            <div class="content-header">
                <div class="container-fluid">
                    <div class="row mb-2">
                        <div class="col-sm-6">
                            <h1 class="m-0">@ViewBag.PageTitle</h1>
                        </div>
                        <div class="col-sm-6">
                            <ol class="breadcrumb float-sm-right">
                                <li class="breadcrumb-item"><a href="/">Home</a></li>
                                <li class="breadcrumb-item active">@ViewBag.PageTitle</li>
                            </ol>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Main content -->
            <div class="content">
                <div class="container-fluid pt-2">
                    @RenderBody()
                </div>
            </div>

        </div>

        <footer class="main-footer">
            <div class="float-right d-none d-sm-inline">
                Bettiah Police Management System
            </div>
            <strong>Copyright &copy; @DateTime.UtcNow.AddHours(5).AddMinutes(30).Year <a href="/"> Created By Md Asif </a>.</strong> All rights reserved.
        </footer>

    </div>

    <script src="/Scripts/jquery.min.js"></script>
    <script src="/Scripts/jquery.validate.min.js"></script>
    <script src="/Scripts/jquery.validate.unobtrusive.min.js"></script>
    <script src="/Scripts/toastr.min.js"></script>
    <script src="/AdminLayout/js/bootstrap.bundle.min.js"></script>
    <script src="/AdminLayout/js/adminlte.min.js"></script>
    <script src="/AdminLayout/owlcarousel/owl.carousel.min.js"></script>
    <script src="/AdminLayout/datatables/jquery.dataTables.min.js"></script>
    <script src="/AdminLayout/datatables-bs4/js/dataTables.bootstrap4.min.js"></script>
    <script src="/AdminLayout/datatables-responsive/js/dataTables.responsive.min.js"></script>
    <script src="/AdminLayout/datatables-responsive/js/responsive.bootstrap4.min.js"></script>
    <script src="/AdminLayout/datatables-buttons/js/dataTables.buttons.min.js"></script>
    <script src="/AdminLayout/datatables-buttons/js/buttons.html5.min.js"></script>>
    <script src="/AdminLayout/datatables-buttons/js/buttons.print.min.js"></script>
    <script src="/Scripts/select2.min.js"></script>

    <script type="text/javascript">

        $(function () {
            var links = $("a.nav-link").filter(function () {
                return this.href == location.href;
            });
            links.addClass("active").closest("ul.nav-treeview").parent().addClass("menu-open").children("a.nav-link").addClass("active");

            $('.table td,.table th').addClass('py-1 px-2 align-middle')
            $('.dtable').dataTable({ "pageLength": 25, "ordering": false, });
            let a = "@TempData["response"]";
            if (a != "") {
                toastr.success(a);
            }
            let a = "@TempData["responseError"]";
            if (a != "") {
                toastr.error(a);
            }
            let b = `@TempData["alert"]`;
            if (b != "") {
                alert(b);
            }
            $('.select2').select2({
                width: 'element'
            });
        });

        function Show(event, imageid) {
            $(imageid).attr('src', URL.createObjectURL(event.target.files[0]));
        }

    </script>
    @RenderSection("Scripts", false)

</body>

</html>