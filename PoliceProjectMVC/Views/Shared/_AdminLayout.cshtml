    <link href="/Content/Site.css" rel="stylesheet" />
    <link href="/Content/toastr.min.css" rel="stylesheet" />
</head>

<body class="sidebar-mini layout-navbar-fixed layout-fixed">
    <div class="wrapper">

        <nav class="main-header navbar navbar-expand navbar-dark navbar-cyan">
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" data-widget="pushmenu" href="javascript:void(0)" role="button">
                        <i class="fas fa-bars"></i>
                    </a>
                </li>
                <li class="nav-item d-none d-sm-inline-block">
                    <a href="/MyUser/Dashboard" class="nav-link">Home</a>
                </li>
            </ul>

            <ul class="navbar-nav ml-auto">
                <li class="nav-item">
                    <button type="submit" name="culture" value="en-IN" class="btn btn-link text-white"><i class="fas fa-globe"></i>  English</button>
                    @*<form action="@Url.Action("SetLanguage", "Home")" method="post" style="display:inline;">
                            <button type="submit" name="culture" value="hi" class="btn btn-link text-white"><i class="fas fa-globe"></i> Hindi</button>
                        </form>*@
                </li>
                @*<li class="nav-item">
                        <div class="user-panel d-flex">
                            <div class="info">
                                <span class="d-block text-white">Admin Panel</span>
                            </div>
                        </div>
                    </li>*@
            </ul>
        </nav>

        <aside class="main-sidebar sidebar-light-cyan elevation-4">
            <a href="/MyUser/Dashboard" class="brand-link bg-cyan">
                <span class="text-white ml-3 font-weight-bold">
                    <img src="/Images/faviconlogo.jpg" style="height:26px; width:auto; padding-right:20px;" />
                    Admin Panel
                </span>
            </a>
            <div class="sidebar text-sm">
                <nav class="mt-2">
                    <ul class="nav nav-pills nav-sidebar flex-column nav-child-indent" data-widget="treeview" role="menu" data-accordion="false">
                        @Html.Action("AdminMainMenu", "Home")
                    </ul>
                </nav>
            </div>
        </aside>

        <div class="content-wrapper">

            <div class="content-header" style="padding:7px;">
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-sm-6">
                            <h1 class="m-0">@ViewBag.PageTitle</h1>
                        </div>
                        <div class="col-sm-6">
                            <ol class="breadcrumb float-sm-right">
                                <li class="breadcrumb-item"><a href="/MyUser/Dashboard">Home</a></li>
                                <li class="breadcrumb-item active">@ViewBag.PageTitle</li>
                            </ol>
                        </div>
                    </div>
                </div>
            </div>
            <!-- Main content -->
            <div class="content">
                <div class="container-fluid pt-2">
                    @RenderBody()
                </div>
            </div>

        </div>

        <footer class="main-footer">
            <div class="float-right d-none d-sm-inline">
                Bettiah Police Management System
            </div>
            <strong>Copyright &copy; @DateTime.UtcNow.AddHours(5).AddMinutes(30).Year <a href="javascript:void(0)"> Developed By Apex Data Solution PVT LTD. </a>.</strong> All rights reserved.
        </footer>

    </div>

    <script src="/Scripts/jquery.min.js"></script>
    <script src="/Scripts/jquery.validate.min.js"></script>
    <script src="/Scripts/jquery.validate.unobtrusive.min.js"></script>
    <script src="/Scripts/toastr.min.js"></script>
    <script src="/AdminLayout/js/bootstrap.bundle.min.js"></script>
    <script src="/AdminLayout/js/adminlte.min.js"></script>
    <script src="/AdminLayout/owlcarousel/owl.carousel.min.js"></script>
    <script src="/AdminLayout/datatables/jquery.dataTables.min.js"></script>
    <script src="/AdminLayout/datatables-bs4/js/dataTables.bootstrap4.min.js"></script>
    <script src="/AdminLayout/datatables-responsive/js/dataTables.responsive.min.js"></script>
    <script src="/AdminLayout/datatables-responsive/js/responsive.bootstrap4.min.js"></script>
    <script src="/AdminLayout/datatables-buttons/js/dataTables.buttons.min.js"></script>
    <script src="/AdminLayout/datatables-buttons/js/buttons.html5.min.js"></script>
    <script src="/AdminLayout/datatables-buttons/js/buttons.print.min.js"></script>
    <script src="/Scripts/select2.min.js"></script>

    <script type="text/javascript">

        $(function () {
            var currentPath = location.pathname.split('/').slice(0, 2).join('/');
            var links = $("a.nav-link").filter(function () {
                return this.href == location.href;
            });

            if (links.length === 0 && !currentPath.includes('/MyUser')) {
                links = $("a.nav-link:not([data-toggle='pill'])").filter(function () {
                    return this.href.includes(currentPath);
                });
            }
            links.addClass("active").closest("ul.nav-treeview").parent().addClass("menu-open").children("a.nav-link").addClass("active");

            $('.table td').addClass('py-1 px-2 align-middle');
            $('.dtable').dataTable({ "pageLength": 25, "ordering": false});
            $('div.col-sm-12').has('.dtable').css('overflow-x', 'auto');

            let a = "@TempData["response"]";
            if (a != "") {
                toastr.success(a);
            }

            let c = "@TempData["responseError"]";
            if (c != "") {
                toastr.error(c);
            }

            let b = `@TempData["alert"]`;
            if (b != "") {
                alert(b);
            }

            /* --- Un Comment to start Select 2 Selection --- */
            //$('.select2').select2({
            //    width: 'element'
            //});

            //$('.select2').on('change', function () {
            //    $(this).valid();
            //});
        });

        function Show(event, imageid) {
            $(imageid).attr('src', URL.createObjectURL(event.target.files[0]));
        }

    </script>
    @RenderSection("Scripts", false)

</body>

</html>