@using PoliceProjectMVC.Custome_Helpers
@model PoliceProjectMVC.Models.MissingMobile
@{
    ViewBag.PageTitle = "Edit MissingMobile";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
    <div class="col-md-12">
        <div class="card card-outline card-primary">
            <div class="card-header d-flex align-items-center">
                <h3 class="card-title mb-0">Update Status</h3>
                <div class="card-tools ml-auto">
                    <a href="/MissingMobile" class="btn btn-primary"><span class="fas fa-backward"></span>&nbsp;&nbsp;Back To List</a>
                </div>
            </div>
            <div class="card-body">
                <form action="/MissingMobile/NewEdit" method="post">
                    <div class="row">
                        @Html.HiddenFor(m => m.Id)
                        <div class="col-md-4 col-sm-6">
                            <div class='form-group'>
                                <label for='Status'>Change Status</label>
                                @Html.DropDownListFor(m => m.Status, MyDropdownsValue.GetMobileStatus(), "Select Status", new { @class = "form-control select2 form-control-sm", data_val = "true", data_val_required = "this field is required" })
                                @Html.ValidationMessageFor(m => m.Status, "", new { @class = "text-danger" })
                            </div>

                        </div>
                    </div>
                    <hr />
                    <div class="row justify-content-center align-content-center mt-3">
                        <div class="col-auto">
                            <button type="submit" class="btn btn-outline-success float-right">Submit</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>