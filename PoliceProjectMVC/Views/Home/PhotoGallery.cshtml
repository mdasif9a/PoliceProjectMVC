@model IEnumerable<PoliceProjectMVC.Models.ImageGallery>
@{
    ViewBag.Title = "Image Gallery";
}

<section class="container my-3 p-0">
    <div class="row g-3">
        <h4 class="sheader mt-3">Image Gallery</h4>
    </div>


    <div class="row g-3">
        @foreach (var item in Model)
        {
            <div class="col-lg-3 col-md-4">
                <div class="card">
                    <img src="@item.ImageUrl" class="card-img-top" alt="Sample Image">
                    <!-- Card Body -->
                    <div class="card-body">
                        <h5 class="card-title text-center">@item.Title</h5>
                    </div>
                </div>
            </div>
        }
    </div>

</section>
