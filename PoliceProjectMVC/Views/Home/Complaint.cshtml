@using PoliceProjectMVC.Custome_Helpers
@model PoliceProjectMVC.Models.Complaint
@{
    ViewBag.Title = "Online Complaint";
}

<section class="container my-3 p-0">
    <form method="post" action="/Home/Complaint" enctype="multipart/form-data">

        <div class="row g-3">
            <h4 class="sheader mt-3">Complaint Details</h4>
        </div>

        <div class="row my-3 g-3">
            <div class="col-md-4 col-sm-6">@Html.GenerateDropDown(m => m.PoliceStationId, "Police Station", "Select Police Station", (SelectList)ViewBag.Police)</div>
            <div class="col-md-4 col-sm-6">@Html.GenerateField(m => m.ComplainSubject, "Complain Subject", "text")</div>
            <div class="col-md-4 col-sm-6">@Html.GenerateField(m => m.IncidentDate, "Incident Date", "date")</div>
            <div class="col-md-4 col-sm-6">@Html.GenerateField(m => m.MyImage, "Document", "file")</div>
            <div class="col-md-4 col-sm-6">@Html.GenerateDropDown(m => m.ComplainType, "Complain Type", "Select", MyDropdownsValue.GetComplainType())</div>
            <div class="col-md-4 col-sm-6">@Html.GenerateField(m => m.ComplainDetails, "Complain Details", "text")</div>
        </div>

        <div class="row mt-3 g-3">
            <h4 class="sheader mt-3">Personal Information</h4>
        </div>

        <div class="row mt-3 g-3">
            <div class="col-md-4 col-sm-6">@Html.GenerateField(m => m.Name, "Name", "text")</div>
            <div class="col-md-4 col-sm-6">@Html.GenerateField(m => m.MobileNo, "Mobile No", "number")</div>
            <div class="col-md-4 col-sm-6">@Html.GenerateField(m => m.Email, "Email", "email")</div>
            <div class="col-md-4 col-sm-6">@Html.GenerateField(m => m.PermanentAdd, "Permanent Address", "text")</div>
            <div class="col-md-4 col-sm-6">@Html.GenerateField(m => m.CorrespoAdd, "Correspondence Address", "text")</div>
            <div class="col-md-4 col-sm-6">@Html.GenerateDropDown(m => m.District, "District", "Select", MyDropdownsValue.GetDistrict())</div>
        </div>

        <div class="row mt-3 justify-content-center">
            <div class="col-auto">
                <button type="submit" class="btn btn-primary">Submit</button>
            </div>
        </div>
    </form>
</section>

@section Scripts{
    @Html.Raw(CustomHtmlHelpers.AddResource("/Scripts/jquery.validate.min.js"))
    @Html.Raw(CustomHtmlHelpers.AddResource("/Scripts/jquery.validate.unobtrusive.min.js"))

}