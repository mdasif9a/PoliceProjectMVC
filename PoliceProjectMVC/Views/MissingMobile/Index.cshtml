@model IEnumerable<PoliceProjectMVC.Models.MissingMobile>
@{
    ViewBag.PageTitle = "MissingMobile List";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int b = 1;
}

<div class="card card-outline card-primary">
    <div class="card-header d-flex align-items-center">
        <h3 class="card-title mb-0">MissingMobile List</h3>

    </div>
    <div class="card-body">
        <div class="container-fluid table-responsive">
            <table class="table dtable table-bordered table-striped table-sm text-nowrap" style="width:100%;">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>IMEI Number</th>
                        <th>Mobile Number</th>
                        <th>Alternate Contact No</th>
                        <th>Date Of Missing</th>
                        <th>Aadhar Number</th>
                        <th>Apply Date</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@(b++)</td>
                            <td>@item.IMEINumber</td>
                            <td>@item.MobileNumber</td>
                            <td>@item.AlternateNumber</td>
                            <td>@item.DateOfMissing.ToShortDateString()</td>
                            <td>@item.AadharNumber</td>
                            <td>@item.CreatedDate.Value.ToShortDateString()</td>
                            <td>
                                <a href="/MissingMobile/Delete/@item.Id" onclick="return confirm('Are you sure you want to delete this MissingMobile?')" class="btn btn-sm btn-danger"><i class="fa fa-trash"></i></a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>