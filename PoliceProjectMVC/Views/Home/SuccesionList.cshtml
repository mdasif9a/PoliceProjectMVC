@model IEnumerable<PoliceProjectMVC.Models.SuccessionList>
@{
    ViewBag.Title = "Succession List";
    int b = 1;
}

<section class="container my-3 p-0">
    <div class="row g-3">
        <h4 class="sheader mt-3">Succession List</h4>
    </div>

    <div class="row g-3">
        <div class="col-md-12">
            <table class="table table-bordered table-striped table-sm text-nowrap" style="width:100%;">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Name</th>
                        <th>Designation</th>
                        <th>Start Date</th>
                        <th>End Date</th>
                        <th>Image</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@(b++)</td>
                            <td>@item.Name_En</td>
                            <td>@item.Designation.Name_En</td>
                            <td>@item.StartDate.ToString("dd-MM-yyyy")</td>
                            <td>@item.EndDate.ToString("dd-MM-yyyy")</td>
                            <td><img src="@item.ImageUrl" width="50" height="50" /></td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</section>
