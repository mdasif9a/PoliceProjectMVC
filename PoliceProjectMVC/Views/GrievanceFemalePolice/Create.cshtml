@using PoliceProjectMVC.Custome_Helpers
@model PoliceProjectMVC.Models.GrievancePolice
@{
    ViewBag.PageTitle = "Add Grievance Female Police";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
    <div class="col-md-12">
        <div class="card card-outline card-primary">
            <div class="card-header d-flex align-items-center">
                <h3 class="card-title mb-0">Add Grievance Female Police</h3>
                <div class="card-tools ml-auto">
                    <a href="/GrievanceFemalePolice" class="btn btn-primary"><span class="fas fa-backward"></span>&nbsp;&nbsp;Back To List</a>
                </div>
            </div>
            <div class="card-body">
                <form action="/GrievanceFemalePolice/Create" method="post" enctype="multipart/form-data">
                    <div class="row">
                        <div class="col-sm-6 col-md-4">@Html.GenerateField(m => m.EmployeeId, "EmployeeId", "text")</div>
                        <div class="col-sm-6 col-md-4">@Html.GenerateField(m => m.Name, "Enter Name", "text")</div>
                        <div class="col-sm-6 col-md-4">@Html.GenerateField(m => m.MobileNo, "Mobile Number", "number")</div>
                        <div class="col-sm-6 col-md-4">@Html.GenerateField(m => m.Email, "EmailId", "email")</div>

                        <div class="col-sm-6 col-md-4">
                            <label for='Description'>Description</label>
                            @Html.TextAreaFor(m => m.Description, new { @class = "form-control form-control-sm", rows = "5" })
                            @Html.ValidationMessageFor(m => m.Description, "", new { @class = "text-danger" })
                        </div>

                        <div class="col-sm-6 col-md-4">@Html.GenerateFileField(m => m.MyImage, "Upload Image", "file", "image/*", "#profileImage")</div>
                        <div class="col-sm-6 col-md-4">@Html.GenerateField(m => m.CurrentPosting, "Current Posting", "text")</div>
                        <div class="col-sm-6 col-md-4">@Html.GenerateDropDown(m => m.CurrentStatus, "Current Employee Status", "Select Status", (SelectList)ViewBag.EmpStatus)</div>
                        
                        <div class="col-sm-6 col-md-4">
                            <img src="/Images/noimage.png" id="profileImage" style="min-height:156px" alt="Upload Photo" class="border border-dark mb-3" width="130" height="156">
                        </div>

                    </div>
                    <hr />
                    <div class="row justify-content-center align-content-center mt-3">
                        <div class="col-auto">
                            <button type="submit" class="btn btn-outline-success float-right">Submit</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
